{
    "openapi": "3.0.0",
    "info": {
        "title": "Cart Service",
        "description": "Cart API Documentation",
        "contact": {
            "email": "bugrabozkurtt@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/cart/add": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Adds a product to the cart",
                "operationId": "64ded07a7d94bb1e041a193be0820098",
                "parameters": [
                    {
                        "name": "x-agent-id",
                        "in": "header",
                        "description": "Unique agent ID for tracking guest users",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "agent-12345"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "product_id",
                                    "quantity"
                                ],
                                "properties": {
                                    "product_id": {
                                        "description": "ID of the product to add to the cart",
                                        "type": "integer",
                                        "example": 15
                                    },
                                    "quantity": {
                                        "description": "Quantity to add to the cart",
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Product successfully added to the cart."
                    }
                }
            }
        },
        "/api/v1/cart/remove/{productId}": {
            "delete": {
                "tags": [
                    "Cart"
                ],
                "summary": "Removes a product from the cart",
                "operationId": "f7c297a444b600005a79a0a6ef4f33a7",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "ID of the product to remove from the cart",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Product successfully removed from the cart."
                    }
                }
            }
        },
        "/api/v1/cart/update/{productId}/{quantity}": {
            "put": {
                "tags": [
                    "Cart"
                ],
                "summary": "Updates the quantity of a product in the cart",
                "operationId": "fcdbbcf6a13df0a05060ac85df892075",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "ID of the product",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "quantity",
                        "in": "path",
                        "description": "New quantity",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product quantity successfully updated."
                    }
                }
            }
        },
        "/api/v1/cart/flush": {
            "delete": {
                "tags": [
                    "Cart"
                ],
                "summary": "Clears the cart",
                "operationId": "c1a5db0cec9ed73e5a20408620f384f9",
                "responses": {
                    "204": {
                        "description": "Cart successfully cleared."
                    }
                }
            }
        },
        "/api/v1/cart": {
            "get": {
                "tags": [
                    "Cart"
                ],
                "summary": "Retrieves the cart",
                "operationId": "78e1bd74040b55fd52e5f7d64b73150f",
                "responses": {
                    "200": {
                        "description": "Cart details retrieved successfully."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CartItemData": {
                "title": "Cart Item Data",
                "description": "Represents an item in the cart",
                "properties": {
                    "product_id": {
                        "description": "ID of the product",
                        "type": "integer",
                        "example": 15
                    },
                    "quantity": {
                        "description": "Quantity of the product in the cart",
                        "type": "integer",
                        "example": 2
                    },
                    "unit_price": {
                        "description": "Unit price of the product (optional)",
                        "type": "number",
                        "format": "float",
                        "example": 49.99,
                        "nullable": true
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Cart",
            "description": "Cart"
        }
    ]
}